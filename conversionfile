#include<iostream>
#include<math.h>
using namespace std;
int main()
{
    int ans=0;
    int result=0;
    int i=0;
    cout<<"enter the number to convert in decimal:"<<endl;
    cin>>ans;
    while(ans!=0)
    {
        int digit=ans%10;
        if(digit==1)
        {
          result=result + pow(2,i);
        }
        ans=ans/10;
        i++;
    }
    cout<<"the number after conversion of decimal is:"<<result<<endl;
}
